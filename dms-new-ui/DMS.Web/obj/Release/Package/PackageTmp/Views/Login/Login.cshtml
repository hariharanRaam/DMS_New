    <script>
        function CheckLogin() {
            debugger;
            var UserName = $("#txtusername").val();
            var Password = $("#txtpwd").val();

            if (UserName == "") {
                $(".errormessage").html('<span class="errormessage"  id="mess">Please Enter UserName...!!</span>');
                $("#erridmsg").show();
                return false;
            }
            if (Password == "") {
