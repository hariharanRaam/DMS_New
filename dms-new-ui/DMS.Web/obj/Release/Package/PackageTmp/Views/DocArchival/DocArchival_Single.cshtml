                title: 'DMS',
                content: 'Select Doc Group.!',
                type: 'blue',
            });
            $("#erridmsg").show();
            return false;
        }
        if (uname == 0) {
            $.alert({
                title: 'DMS',
                content: 'Select Unit.!',
                type: 'blue',
            });
            $("#erridmsg").show();
            return false;
        }
        if (dpnm == 0) {
            $.alert({
                title: 'DMS',
                content: 'Select Department.!',
                type: 'blue',
            });
            $("#erridmsg").show();
            return false;
        }

        if (ActionMode == "I") {
            var filesize = $('#File').val();
            if (filesize == "" || filesize == null) {
                $.alert({
                    title: 'DMS',
                    content: 'Select File.!',
                    type: 'blue',
                });
                return false;
            }
            else {
                $("#form").submit();
            }
        }
        if (ActionMode == "D" || ActionMode == "E") {
            $("#form").submit();
        }

    }

    function Cancel_Single() {
        debugger;
        event.preventDefault();
        //window.location.reload();
        window.location.href = '../DocArchival/DocArchival_Single';
    }
    function BacktoIndexScreen()
    {
        debugger;
        $("form").submit(function (e) {
            e.preventDefault();
        });
        window.location.href = '../GetAllDocuments/GetAllDocuments';
    }
</script>

