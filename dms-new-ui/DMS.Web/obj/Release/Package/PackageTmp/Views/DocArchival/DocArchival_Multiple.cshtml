                                            <div class="col-md-6">
                                                <input type="file" name="FileUpload1" class="form-control input-lg browse btn btn-primary input-lg" multiple="multiple" id="FileUpload1">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.box-body -->
