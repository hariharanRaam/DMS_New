<script>
    function dropdown() {
        debugger;
        var dpnm = $("#DeptID").val();
        var uname = $("#Unit").val();
        var docgroup = $("#Catgery").val();
        var docname = $("#subCatgery").val();

        if (docname == 0) {
            $.alert({
                title: 'DMS',
                content: 'Select Doc Name.!',
                type: 'blue',
            });
            $("#erridmsg").show();
            return false;
        }

        if (docgroup == 0) {
            $.alert({
                title: 'DMS',
                content: 'Select Doc Group.!',
                type: 'blue',
            });
            $("#erridmsg").show();
            return false;
        }

        if (uname == 0) {
            $.alert({
                title: 'DMS',
                content: 'Select Unit.!',
                type: 'blue',
            });
            $("#erridmsg").show();
            return false;
        }

        if (dpnm == 0) {
            $.alert({
                title: 'DMS',
                content: 'Select Department.!',
                type: 'blue',
            });
            $("#erridmsg").show();
            return false;
        }
        
        var filesize = $('#FileUpload1').val();
        if (filesize == "" || filesize == null) {
            $.alert({
                title: 'DMS',
                content: 'Select File.!',
                type: 'blue',
            });
            return false;
        }
        else {
            $("#form").submit();
        }
    }

    function Cancel_Multiple() {
        debugger;
        window.location.href = '../DocArchival/DocArchival_Multiple';
    }

</script>

