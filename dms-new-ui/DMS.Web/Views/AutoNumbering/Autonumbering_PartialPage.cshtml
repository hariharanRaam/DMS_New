
<style>
    .k-widget.k-window {      
        width: 382px !important;      
    }

    div.k-window-content {
        overflow:hidden !important
    }
     .form-control2 {
        display: block;
        height: 26px;
        width: 165%;
        padding: 0.4375rem 0.875rem;
        font-size: 0.8rem;
        font-weight: 400;
        line-height: 1.53;
        color: #697a8d;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #d9dee3;
        -webkit-appearance: none;
        -moz-appearance: none;
        border-radius: 0.375rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
    div.k-window-content {
         padding: 0.1em !important;
    }
     .modal-footer1 {       
        justify-content: flex-end !important;       
    padding-top:8px;
    padding-right:20px;
     display:flex ;
     padding-bottom: 15px
    }
     .card-body1{

     }
</style>
<div style="width:25px"></div>
<div class="card-body1" style="margin-top: 15px;padding-left: 15px;">
    <div class="row">
        <div class="mb-2 col-md-6">
            @Html.Label("prefix", "Prefix", new
           {
               @class = "form-label"@*,style = "width:120px;font-weight: normal;"*@ })
            <input type="text" @*style="height:25px;width:225px;font-weight: normal;"*@ class="form-control2" id="prefix" />
        </div>
        <div class="mb-2 col-md-6" style="margin-top:10px">
            @Html.Label("Year", new
           {
               @class = "form-label"@*,style = "width:auto;font-weight: normal;margin-left:15px"*@ })
            <input type="checkbox" class="form-check-input" id="auyearY" name="auyear" value="Y">
            @Html.Label("Month", new
           {
               @class = "form-label" @*,style = "width:auto;font-weight: normal;"*@ })
            <input type="checkbox" class="form-check-input" id="aumonthY" name="aumonth" value="Y">
            @Html.Label("Date", new
           {
               @class = "form-label" @*,style = "width:auto;font-weight: normal;margin-left:60px"*@ })
            <input type="checkbox" class="form-check-input" id="audateY" name="audate" value="Y">
        </div>
        <div class="mb-2 col-md-6">
            @Html.Label("Sequence Number", new
       {
           @class = "form-label" @*,style = "width:120px;font-weight: normal;"*@ })
            <input type="text" class="number form-control2" @*style="height:25px;width:225px;font-weight: normal;"*@ id="seq" />
        </div>
        </div>
</div>
<div class="modal-footer1">
    <input type="button" name="btncancel" value="Cancel" style="margin-right:10px" id="btncancel" onclick="return closeopup()" class="btn btn-sm btn-danger" @*style="width:60px;margin-left:15px"*@ />
    <input type="button" name="btnsubmit" value="Save" id="btnsave" onclick="return save()" class="btn btn-sm btn-primary" @*style="width:60px"*@ />
</div>