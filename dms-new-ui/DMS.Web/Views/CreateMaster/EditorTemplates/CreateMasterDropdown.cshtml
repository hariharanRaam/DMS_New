@using Kendo.Mvc.UI;
@using Kendo.Mvc.UI.Fluent;
@using Kendo.Mvc.Extensions;
@model DMS.Model.CreateMaster_Model
<style>   
   
    .form-control2 {
        display: block;
        height: 26px;
        width: 165%;
        padding: 0.4375rem 0.875rem;
        font-size: 0.8rem;
        font-weight: 400;
        line-height: 1.53;
        color: #697a8d;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #d9dee3;
        -webkit-appearance: none;
        -moz-appearance: none;
        border-radius: 0.375rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
    .k-edit-buttons.k-state-default{
        display:none
    }
    label {
        display: inline-block;
        max-width: 100%;
        margin-bottom: 5px;
        font-weight: 400;
    }
    div.k-window-content {
        overflow:hidden !important
    }
    .modal-footer1 {       
        justify-content: flex-end !important;       
    padding-top:20px;
    padding-right:20px;
     display:flex ;
    }
</style>
<div class="row" style="padding-bottom:5px;padding-left:15px;padding-right:5px">
    <div class="col-sm-6">
        <label for="Reconname" class="form-label">QCD Code</label>
        <input class="form-control2" id="Id" name="Id" type="text" value="" data-bind="value:Id">
    </div>
    <div class="col-sm-6" style="padding-top:10px">
        <label for="Reconname" class="form-label">Name</label>
        <input class="form-control2" id="Name" name="AccountNo" type="text" value="" data-bind="value:Name">
    </div>
</div>
<div class="row" style="padding-bottom:5px;padding-left:15px;padding-right:5px">
    <div class="col-sm-6" style="padding-top:10px">
        <label for="Reconname" class="form-label">Dependent Code</label>
        @(Html.Kendo().DropDownList().Name("DependId")
                                         .DataTextField("DependName")
                                 .DataValueField("DependId")
                         .HtmlAttributes(new { style = "height:25px;width: 180%;font-weight: normal" })
                                 .DataSource(source => { source.Read(read => { read.Action("GetQcdMaster", "CreateMaster").Data("additionalinfo"); }).ServerFiltering(true); })
                 .SelectedIndex(0)
        )
    </div>
</div>
<div class="modal-footer1">
    <input type="button" name="btncancel" value="Cancel" id="btncancel" style="margin-right:10px" onclick="return closeopup()" class="btn btn-sm btn-danger" @*style="width:60px;margin-left:15px"*@ />
    <input type="button" name="btnsubmit" value="Save" id="btnsave"  class="btn btn-sm btn-primary k-button k-grid-update" @*style="width:60px"*@ />
</div>

